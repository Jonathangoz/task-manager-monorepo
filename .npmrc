# Configuración para pnpm workspaces con Prisma
auto-install-peers=true
dedupe-peer-dependents=false

# Configuración específica para Prisma
# Permite que Prisma genere correctamente en monorepos
shamefully-hoist=false

# Configuración para resolver problemas de Node.js y binarios
node-linker=node_modules

# Configuración para packages con binarios nativos
side-effects-cache=false

# Configuración para resolver problemas de workspace
prefer-workspace-packages=true

# task-manager-monorepo/.npmrc
# Configuración para pnpm workspaces con Prisma
auto-install-peers=true
dedupe-peer-dependents=false

# Configuración específica para Prisma
# Permite que Prisma genere correctamente en monorepos
shamefully-hoist=false

# Configuración para resolver problemas de Node.js y binarios
node-linker=node_modules

# Configuración para packages con binarios nativos
side-effects-cache=false

# Configuración para resolver problemas de workspace
prefer-workspace-packages=true
shared-workspace-lockfile=true

# Configuración específica para paquetes problemáticos
package-import-method=auto

# Configuración de registry
registry=https://registry.npmjs.org/

# Configuración adicional
shamefully-hoist=false
strict-peer-dependencies=false

# Auto-aprobar builds y dependencias
approve-default=true

# Configuración adicional para Prisma en monorepos
onlyBuiltDependencies[]="@prisma/client"
onlyBuiltDependencies[]="@prisma/engines"
onlyBuiltDependencies[]="@scarf/scarf"
onlyBuiltDependencies[]="argon2"
onlyBuiltDependencies[]="prisma"
onlyBuiltDependencies[]="sharp"