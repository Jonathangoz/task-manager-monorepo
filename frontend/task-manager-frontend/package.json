  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "clean": "rimraf .next out dist",
    "lint": "eslint . --ext .ts,.tsx --fix",
