{
  "name": "task-manager-task-service",
  "version": "1.0.0",
  "description": "Microservicio de gestiÃ³n de tareas para Task Manager",
  "main": "dist/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=10.0.0"
  },
  "private": true,
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "pnpm run clean && tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "swagger:validate": "ts-node -r tsconfig-paths/register src/scripts/validate-swagger.ts",
    "swagger:generate": "swagger-jsdoc -d src/utils/swagger.ts src/commons/routes/*.ts -o swagger.json",
    "docs:serve": "swagger-ui-serve swagger.json",
    "docs:build": "redoc-cli build docs/swagger.json --output docs/index.html"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "axios": "^1.7.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "connect-timeout": "^1.9.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-slow-down": "^2.1.0",
    "http-errors": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "jose": "^5.9.0",
    "morgan": "^1.10.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "prisma": "^6.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8",
    "uuid": "^10.0.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/connect-timeout": "^1.9.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.8.7",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "openapi-types": "^12.1.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}