# services/task-service/.env
NODE_ENV=production
PORT=3002
API_VERSION=v1

# Database - Local Docker
DATABASE_URL=postgresql://postgres:1234@task-db:5432/task_db

# Redis - Local Docker
REDIS_URL=redis://redis:6379
REDIS_PREFIX=tasks:

# Auth Service
AUTH_SERVICE_URL=http://auth-service:3001
AUTH_SERVICE_VERIFY_ENDPOINT=/api/v1/auth/verify-token

# Auth Service API Key and Timeout
AUTH_SERVICE_API_KEY=base64:a25Rnl8mTPLudIVAAhfhjZZZyAiPjIhK8Y9h4cSSVBA=
AUTH_SERVICE_TIMEOUT=10000

# JWT Configuration (para validaci√≥n local)
JWT_SECRET=base64:u+vQTtcSFJR4GsfR7D4bvK6IAsACgvb8hW62FdlEqYCP/GoZQPNCw9Bmw4iVrrSrkj998JYRz41rldpInU/K9g==
JWT_ISSUER=task-manager-auth

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Security
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Endpoint-specific rate limits
RATE_LIMIT_AUTH_MAX=20
RATE_LIMIT_CREATE_TASK_MAX=10
RATE_LIMIT_SEARCH_MAX=30
RATE_LIMIT_BULK_MAX=5
RATE_LIMIT_ADMIN_MAX=50

# Time windows (in milliseconds)
RATE_LIMIT_CREATE_TASK_WINDOW_MS=60000
RATE_LIMIT_SEARCH_WINDOW_MS=60000
RATE_LIMIT_BULK_WINDOW_MS=300000
RATE_LIMIT_ADMIN_WINDOW_MS=60000

# Redis store configuration
RATE_LIMIT_REDIS_KEY_PREFIX=rate_limit:
RATE_LIMIT_SKIP_SUCCESSFUL=false
RATE_LIMIT_SKIP_FAILED=false

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache TTL (seconds)
CACHE_TTL_TASKS=300
CACHE_TTL_CATEGORIES=600
CACHE_TTL_USER_TASKS=180
CACHE_TTL_USER_CATEGORIES=600
CACHE_TTL_USER_STATS=300
CACHE_TTL_TASK_DETAIL=300
CACHE_TTL_CATEGORY_DETAIL=600
CACHE_TTL_SEARCH_RESULTS=120

# Health Check
HEALTH_CHECK_ENABLED=true
SWAGGER_ENABLED=true
SWAGGER_PATH=/docs
SWAGGER_JSON_PATH=/swagger.json

# Production Security (opcional)
DOCS_USERNAME=admin
DOCS_PASSWORD=secure123