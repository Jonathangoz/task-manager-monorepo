# Task Service Environment Variables
NODE_ENV=production
PORT=3002
API_VERSION=v1

# Base de Datos - USAR URL DE RENDER
DATABASE_URL=postgresql://username:password@hostname:port/database

# Redis - USAR URL DE RENDER (mismo que auth-service)
REDIS_URL=redis://hostname:port
REDIS_PREFIX=tasks:

# Auth Service Communication
AUTH_SERVICE_URL=https://your-auth-service.onrender.com
AUTH_SERVICE_VERIFY_ENDPOINT=/api/v1/auth/verify-token

# JWT Validation (Para validaci√≥n local)
JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_SECRET

# CORS - USAR URLs REALES DE RENDER
CORS_ORIGIN=https://your-frontend.onrender.com,https://your-auth-service.onrender.com

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100