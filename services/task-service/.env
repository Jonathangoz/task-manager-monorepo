# Base
NODE_ENV=production
PORT=3002
API_VERSION=v1

# Base de Datos (PostgreSQL dedicada para Tasks)
DATABASE_URL=postgresql://usuario:password@localhost:5432/task_db

# Redis (Compartido pero con prefijo)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=tasks:

# Auth Service Communication
AUTH_SERVICE_URL=https://tu-auth-service.render.com
AUTH_SERVICE_VERIFY_TOKEN_ENDPOINT=/api/v1/auth/verify-token

# CORS
CORS_ORIGIN=https://tu-frontend.render.com,https://tu-auth-service.render.com

# Logging
LOG_LEVEL=info

# Paginaci√≥n
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100