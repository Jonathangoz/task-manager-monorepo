# services/task-service/.env.example
NODE_ENV=development
PORT=3002
API_VERSION=v1

# Database
DATABASE_URL=postgresql://task_user:task_password@localhost:5432/task_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=tasks:

# Auth Service
AUTH_SERVICE_URL=http://localhost:3001
AUTH_SERVICE_VERIFY_ENDPOINT=/api/v1/auth/verify-token

# JWT Configuration (para validaci√≥n local)
JWT_SECRET=your-super-secure-jwt-secret-minimum-64-characters-for-production-use
JWT_ISSUER=task-manager-auth

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Security
HELMET_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache TTL (seconds)
CACHE_TTL_TASKS=300
CACHE_TTL_CATEGORIES=600

# Health Check
HEALTH_CHECK_ENABLED=true
SWAGGER_ENABLED=true