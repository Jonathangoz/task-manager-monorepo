# ==============================================
# TASK SERVICE ENVIRONMENT VARIABLES
# ==============================================

# Base Configuration
NODE_ENV=development
PORT=3002
API_VERSION=v1

# Database (PostgreSQL independiente para Tasks)
# En producción: usar la URL de Render PostgreSQL
DATABASE_URL=postgresql://task_user:task_password@localhost:5432/task_db

# Redis Cache (Compartido pero con prefijo)
# En producción: usar Redis de Render o externa
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=task:

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3001
AUTH_SERVICE_API_KEY=your-secure-api-key-for-service-communication
AUTH_SERVICE_TIMEOUT=5000

# JWT Configuration (Para validación local)
JWT_SECRET=your-super-secure-jwt-secret-at-least-64-characters-long-please
JWT_ISSUER=task-manager-auth

# CORS Origins (Múltiples URLs separadas por comas)
CORS_ORIGIN=http://localhost:3000,https://your-frontend.render.com,https://your-auth-service.render.com

# Security Headers
HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_PRETTY=true

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Configuration
CACHE_TTL_TASKS=300
CACHE_TTL_CATEGORIES=600
CACHE_TTL_USER_TASKS=180

# Background Jobs Configuration
CLEANUP_INTERVAL=3600000
STATS_UPDATE_INTERVAL=300000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/v1/docs

# File Upload Configuration (Para futuras funciones)
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Notification Configuration (Para futuras integraciones)
NOTIFICATIONS_ENABLED=false
WEBHOOK_URL=