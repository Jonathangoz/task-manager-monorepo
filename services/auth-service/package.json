{
  "name": "task-manager-auth-service",
  "version": "1.0.0",
  "description": "Microservicio de autenticaciÃ³n para Task Manager",
  "main": "dist/src/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc",
    "dev:watch": "tsc-watch --onSuccess \"tsc-alias && node dist/src/server.js\"",
    "dev": "tsc --watch & tsc-alias --watch && nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node -r tsconfig-paths/register dist/src/server.js",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --coverage --ci --watchAll=false",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:migrate": "prisma migrate deploy",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check src/**/*.ts",
    "swagger:validate": "ts-node -r tsconfig-paths/register src/scripts/validate-swagger.ts",
    "swagger:generate": "swagger-jsdoc -d src/utils/swagger.ts src/routes/*.ts -o docs/swagger.json",
    "docs:serve": "swagger-ui-serve docs/swagger.json",
    "docs:build": "redoc-cli build docs/swagger.json --output docs/index.html"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "argon2": "^0.43.1",
    "axios": "^1.7.0",
    "compression": "^1.8.0",
    "connect-timeout": "^1.9.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.1",
    "express-slow-down": "^2.1.0",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.4.1",
    "jose": "^5.9.0",
    "morgan": "^1.10.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "prisma": "^6.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/compression": "^1.8.1",
    "@types/connect-timeout": "^1.9.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-slow-down": "^1.3.3",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.8.7",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "openapi-types": "^12.1.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^6.3.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.6.3"
  }
}
