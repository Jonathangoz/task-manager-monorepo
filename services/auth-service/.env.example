# services/auth-service/.env.example
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL=postgresql://auth_user:auth_password@localhost:5432/auth_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=auth:

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-minimum-64-characters-for-production-use
JWT_EXPIRES_IN=15m
JWT_ISSUER=task-manager-auth

# Refresh Token
REFRESH_TOKEN_SECRET=your-super-secure-refresh-secret-minimum-64-characters-for-production
REFRESH_TOKEN_EXPIRES_IN=7d

# JWE Configuration
JWE_SECRET=your-exactly-32-character-secret!
JWE_ALGORITHM=dir
JWE_ENCRYPTION=A256GCM

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Security
HELMET_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Health Check
HEALTH_CHECK_ENABLED=true
SWAGGER_ENABLED=true