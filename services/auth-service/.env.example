# ==============================================
# AUTH SERVICE ENVIRONMENT VARIABLES
# ==============================================

# Base Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database (PostgreSQL independiente para Auth)
# En producción: usar la URL de Render PostgreSQL
DATABASE_URL=postgresql://auth_user:auth_password@localhost:5432/auth_db

# Redis Cache (Compartido pero con prefijo)
# En producción: usar Redis de Render o externa
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=auth:

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-64-characters-long-please
JWT_EXPIRES_IN=15m
JWT_ISSUER=task-manager-auth

# Refresh Token Configuration
REFRESH_TOKEN_SECRET=your-super-secure-refresh-secret-at-least-64-characters-long
REFRESH_TOKEN_EXPIRES_IN=7d

# JWE (JSON Web Encryption) Configuration
JWE_SECRET=your-32-character-jwe-encryption-key-here
JWE_ALGORITHM=dir
JWE_ENCRYPTION=A256GCM

# CORS Origins (Múltiples URLs separadas por comas)
CORS_ORIGIN=http://localhost:3000,https://your-frontend.render.com,https://your-task-service.render.com

# Security Headers
HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_PRETTY=true

# Session Configuration
SESSION_MAX_AGE=86400000
SESSION_CLEANUP_INTERVAL=3600000

# Password Security
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4
ARGON2_HASH_LENGTH=32
ARGON2_SALT_LENGTH=16

# Email Configuration (Para futuras funciones)
EMAIL_ENABLED=false
EMAIL_FROM=noreply@taskmanager.com
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/v1/docs