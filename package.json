
{
  "name": "task-manager-monorepo",
  "version": "1.0.0",
  "private": true, 
  "description": "Una aplicación de gestión de tareas con arquitectura de microservicios",
  "scripts": {
    "//-- CONFIGURACIÓN --//": "",
    "setup": "pnpm install",
    "build": "pnpm -r --filter=!./frontend/task-frontend build",
    "build:frontend": "pnpm --filter task-frontend build",

    "//-- DESARROLLO --//": "",
    "dev": "pnpm --parallel --stream -r dev",
    "dev:auth": "pnpm --filter task-manager-auth-service dev",
    "dev:tasks": "pnpm --filter task-manager-task-service dev",
    "dev:frontend": "pnpm --filter task-frontend dev",

    "//-- LINTING Y FORMATO --//": "",
    "lint": "pnpm -r lint",
    "lint:check": "pnpm -r lint:check",
    "format": "prettier --write .",

    "//-- PRUEBAS --//": "",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage"
  },
  "author": "Task Manager Team",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.16.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@types/uuid": "^10.0.0",
    "@types/http-errors": "^2.0.5",
    "@types/ioredis": "^5.0.0",
    "@types/pino": "^7.0.5",
    "@types/pino-pretty": "^5.0.0",
    "@types/cookie-parser": "^1.4.9",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}