{
  "name": "task-manager-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend/*",
    "shared/*"
  ],
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "setup": "pnpm install",
    "build": "pnpm -r --filter=!./frontend/* build",
    "build:frontend": "pnpm --filter=./frontend/* build",
    "dev": "pnpm --parallel --stream -r dev",
    "dev:auth": "pnpm --filter=task-manager-auth-service dev",
    "dev:tasks": "pnpm --filter=task-manager-task-service dev",
    "dev:frontend": "pnpm --filter=task-manager-frontend dev",
    "lint:check": "pnpm -r lint:check",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "clean": "pnpm -r clean",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:down": "docker-compose -f docker-compose.dev.yml down"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/compression": "^1.8.1",
    "@types/connect-timeout": "^1.9.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.17.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "openapi-types": "^12.1.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^6.3.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.6.3"
  }
}
